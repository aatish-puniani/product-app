<div style>
  <h2><%= @product.name %></h2>
  <h4>Made by: <%= @product.supplier.name %></h4>
  <h3><%= @product.sale_message %></h3>
  <h3>Price: $<%= @product.price %></h3>
  <h4>Tax $<%= @product.tax.to_i %></h4>
  <h4>Total $<%= @product.total.to_i %></h4>
  <h3>Stock: <%= @product.stock %></h3>
</div>
  <% @product.images.each do |image| %>
    <img src="<%= image.src %>" alt"<%= @product.name %>" class="img-responsive">
    <% end %>
  <h3>Description: <%= @product.description %></h3>
  <h2>Checkout:</h2>
  <%= form_tag "/orders", method: :post do %>
  <div class="form-group">
    <%= label_tag :quantity %>
    <%= text_field_tag :quantity %>
    <%= hidden_field_tag :product_id, @product.id %>
  </div>
  <div>
  <%= submit_tag "Buy Now" %>
  <% end %>
  </div>
  <h4><%= link_to "Return", "/products" %></h4>
  <h4><%= link_to "Edit", "/products/#{@product.id}/edit" %></h4>
  <h4><%= link_to "Delete", "/products/#{@product.id}", method: :delete %></h4>