<h1>Add a new synth</h1>
<%= form_tag '/products', method: :post do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price %>
  </div>
  <div class="form-group">
    <%= label_tag :stock %>
    <%= text_field_tag :stock %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description %>
  </div>
  <div class="form-group">
    <%= label_tag :image %>
    <%= text_field_tag :image %>
  </div>
  <div>
  <%= submit_tag "Add synth" %>
  </div>
<% end %>